# Fvwm-simple config for the fvwm window manager
# sep 2020 by robository

#Set Size of Screen
InfoStoreAdd horizontal 1024

InfoStoreAdd font 'DejaVuSansMono'
#ImagePath in home folder .fvwm is hidden
ImagePath $HOME/.fvwm/images

#Mouse stays in Desktop
EdgeScroll 0 0 

#Starting Fvwm starts this Module
DestroyFunc StartFunction
AddToFunc StartFunction
+ I Module FvwmButtons taskBar

#RootMenu
DestroyMenu MenuFvwmRoot
AddToMenu MenuFvwmRoot
+ "%terminal.png%URxvt" Exec exec urxvt -geometry 90x30+55+45
+ "" Nop
+ "Gimp" Exec exec gimp
+ "" Nop
+ "%restart.png%Restart" Restart
+ "%exit.png%Exit" Module FvwmScript FvwmScript-ConfirmQuit

#Sound Volume
DestroyMenu SoundSet
AddToMenu SoundSet
+ "%audioOff.png%off" SoundSetOff
+ "%audioH.png%Max" SoundSetOn
+ "%audioM.png%1/2" SoundSetOn
+ "%audioL.png%quiet" SoundSetOn
+ "" Nop
+ "%audio.png%Vol" Exec exec urxvt -e alsamixer
+ "%audioEqual.png%Equal"

DestroyFunc SoundSetOff
AddToFunc SoundSetOff
+ I Exec exec amixer set Master,0 0%
+ I SendToModule taskBar ChangeButton sound Icon "audioOff.png"
DestroyFunc SoundSetOn
AddToFunc SoundSetOn
+ I Exec exec amixer set Master,0 100%
+ I SendToModule taskBar ChangeButton sound Icon "audioH.png"

#Window Arranger Menu
DestroyMenu WinArr
AddToMenu WinArr 
+ "%winArrC.png%Center" WinArrC
+ "%winArrM.png%Max" WinArrM
+ "%winArrT.png%Top" WinArrU
+ "%winArrB.png%Down" WinArrD
+ "%winArrL.png%Left" WinArrL
+ "%winArrR.png%Right" WinArrR
+ "%winArrSW.png%Left Down" WinArrSW
+ "%winArrSE.png%Right Down" WinArrSE
+ "%winArrNW.png%Left Up" WinArrNW
+ "%winArrNE.png%Right Up" WinArrNE

#Window Arranger Functions for position and size
AddToFunc WinArrC I Resize 758p 579p
+ I Move 128p 128p
+ I Raise
AddToFunc WinArrM I Resize 1024p 748p
+ I Move 0p 20p
+ I Raise
AddToFunc WinArrU I Resize 1024p 374p
+ I Move 0p 20p
+ I Raise
AddToFunc WinArrD I Resize 1024p 374p
+ I Move 0p 394p
+ I Raise
AddToFunc WinArrL I Resize 512p 748p
+ I Move 0p 20p
+ I Raise
AddToFunc WinArrR I Resize 512p 748p
+ I Move 512p 20p
+ I Raise
AddToFunc WinArrSW I Resize 512p 374p
+ I Move 0p 394p
+ I Raise
AddToFunc WinArrSE I Resize 512p 374p
+ I Move 512p 394p
+ I Raise
AddToFunc WinArrNW I Resize 512p 374p
+ I Move 0p 20p
+ I Raise
AddToFunc WinArrNE I Resize 512p 374p
+ I Move 512p 20p
+ I Raise
                                                
#Style
Style * !Icon
Style * MouseFocusClickRaises, !Sticky, !Title, BorderWidth 1, HandleWidth 1,\
        HilightBorderColorset 3, ClickToFocus 
Style taskBar !Title, !Handles, !Borders, WindowListSkip, Sticky, NeverFocus
Style iconMan Borderwidth 0   
MenuStyle * BorderWidth 0, Font 'xft:$[infostore.font]:size=10',\
	    Foreground #000000, Background #ffffff,\
	    HilightBack #202020 , ActiveFore #ffffff
	    
#Colorsets Pixmap image.png RootTransparent
Colorset 0 fg #ffffff, bg #202020
Colorset 1 fg #000000, bg #ffffff
Colorset 2 fg #ffffff, bg #454545
Colorset 3 fg #ffffff, bg #ff0000

#Module configs 
DestroyModuleConfig FvwmScript: *
*FvwmScript: DefaultColorset 0

#Taskbar
DestroyModuleConfig taskBar: *
*taskBar: Geometry $[infostore.horizontal]x20+0+0
*taskBar: Padding 1 1
*taskBar: Colorset 0
*taskBar: Colums 0
*taskBar: Frame 0
*taskBar: Rows 1
*taskBar: Font "xft:$[infostore.font]:size=14"
#Buttons (for Image= ActiveIcon PressIcon)
#RootMenu
*taskBar: (15x1, Icon "computer.png", ActiveIcon "computerA.png",\
	   Action(Mouse 1) Menu  MenuFvwmRoot 0 20p, Frame 0)
#Terminal
*taskBar: (15x1, Icon "terminal.png", ActiveIcon "terminalA.png",\
	   Action(Mouse 1) "Exec exec urxvt -geometry 90x30+55+45", Frame 0)
#Filemanager
*taskBar: (15x1,  Icon "data.png", ActiveIcon "dataA.png",\
	   Action(Mouse 1) "Exec exec thunar", Frame 0)
#Internet
*taskBar: (15x1, Icon "firefox.png", ActiveIcon "firefox.png",\
	   Action(Mouse 1) "Exec exec firefox", Frame 0)
#Desktops (leftclick main, middle, second, right click, third desktop
*taskBar: (15x1, Id desktop, Icon "desk1.png",\
	   Action(Mouse 1) desk0, Action(Mouse 2) desk1,\
	   Action(Mouse 3) desk2 ,Frame 0)
*taskBar: (5x1, Frame 0)
#Swallow stuff
*taskBar: (400x1, Left,  Swallow iconMan 'Module FvwmIconMan iconMan', Frame 0)
*taskBar: (15x1, Id sound, Icon "audioH.png", Action(Mouse3) 'Menu SoundSet', Frame 0)
*taskBar: (65x1, Right,  Swallow script-clock 'FvwmScript $./script-clock',\
	       Frame 1)

#Change Desktop & Icon/Title
DestroyFunc desk0
AddToFunc desk0 I GoToDesk 0 0
+ I SendToModule taskBar ChangeButton desktop Icon "desk1.png"
DestroyFunc desk1
AddToFunc desk1 I GoToDesk 0 1
+ I SendToModule taskBar ChangeButton desktop Icon "desk3.png"
DestroyFunc desk2
AddToFunc desk2 I GoToDesk 0 2
+ I SendToModule taskBar ChangeButton desktop Icon "desk2.png"

#IconMan
DestroyModuleConfig iconMan: *
*iconMan: Title " "
*iconMan: ButtonGeometry 120x20
*iconMan: ManagerGeometry 0x1
*iconMan: Resolution desk
*iconMan: ReliefThickness 0
*iconMan: DrawIcons always
*iconMan: Padding 1 1 
*iconMan: UseWinList
*iconMan: Sort id
#
*iconMan: FocusAndSelectColorset 3
*iconMan: IconAndSelectColorset 3
*iconMan: SelectColorset 3
*iconMan: TitleColorset 0
*iconMan: FocusColorset 1
*iconMan: PlainColorset 2
*iconMan: IconColorset 0
#
*iconMan: Font "xft:$[infostore.font]:size=9"
*iconMan: Format "%t"
*iconMan: Action Mouse 3 A sendcommand "Menu WinArr 0 10p"
*iconMan: Action Mouse 2 A sendcommand "Close"

#Mouse behavior Leftclick = no action, right Rootmenu
Mouse 3 R A Menu MenuFvwmRoot
Mouse 1 R A Nop
