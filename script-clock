WindowTitle {Clock}
WindowSize  120 20

Init
 Begin
  Set $Time = (GetOutput {exec date "+%d.%m %a  %H:%M"} 1 -1)
  ChangeTitle 1 $Time
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%d.%m %a  %H:%M"} 1 -1)
   ChangeTitle 1 $Time
  End
End

Widget 1
Property
 Position 0 -1
 Size 120 20
 Font "xft:DejaVuSansMono:size=9"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End


